@model List<HotelResrvation.DAL.Model.UserInfo>
@{
    ViewBag.Title ="Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav class="navbar navbar-expand-lg navbar-light table-bordered bg-success" style="margin-top:5px">
    <div class="container-fluid">
        <a class="btn btn-primary" href="~/User/Insert" style="margin-left:1060px; margin-top:7px;"><span class="glyphicon glyphicon-plus"></span>Add</a>
       
    </div>
    
    </nav>
        <h2 style="font-family:'Times New Roman'; font-display:fallback; ">User List</h2>
        <table id="userStatus" class="ui celled table">
            <thead>
                <tr>
                    <th>UserId</th>
                    <th>Address</th>
                    <th>PhoneNumber</th>
                    <th>UserName</th>
                    <th>Password</th>
                    <th>UserType</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td>@item.Address</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.UserName</td>
                        <td>@item.Password</td>
                        <td>@item.UserType</td>
                        <td>
                            <button class="btn btn-default"><span class="glyphicon glyphicon-eye-open"></span></button>
                            
                            <a href="~/User/Edit/@item.UserId" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href="~/User/Delete/@item.UserId" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>UserId</th>
                    <th>Address</th>
                    <th>PhoneNumber</th>
                    <th>UserName</th>
                    <th>Password</th>
                    <th>UserType</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>

