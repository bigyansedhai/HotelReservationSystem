@model List<HotelResrvation.DAL.Model.UserInfo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User List</h2>

<table id="userStatus" class="ui celled table">
    <thead>
        <tr>
            <th>UserId</th>
            <th>Address</th>
            <th>PhoneNumber</th>
            <th>UserName</th>
            <th>Password</th>
            <th>UserType</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.UserId</td>
            <td>@item.Address</td>
            <td>@item.PhoneNumber</td>
            <td>@item.UserName</td>
            <td>@item.Password</td>
            <td>@item.UserType</td>
            <td>
                <button class="btn btn-default"><span class="glyphicon glyphicon-eye-open"></span></button>
                <button class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></button>
                <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></button>
            </td>
        </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th>UserId</th>
            <th>Address</th>
            <th>PhoneNumber</th>
            <th>UserName</th>
            <th>Password</th>
            <th>UserType</th>
            <th>Action</th>
        </tr>
    </tfoot>
</table>

